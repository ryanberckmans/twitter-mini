<div id="user_index">
  <div id="user_timeline">
    <div id="timeline_header">
      <div class="padded">Tweets</div>
    </div>    
    {{render "timeline" allTweets}}
    
  </div>
  <div id="user_profile">
    <table id="user_profile_table">
      <tr>
        <td colspan=2>
          {{gravatar-image email=email}}
        </td>
      </tr>
      <tr>
        <td>
          <div class="tweet_count_container">
            TWEETS:<br>
            <div class="tweet_count">
              {{tweetCount}}
            </div>
          </div>
        </td>
        <td>
          <div class="profile_fullname">
            {{firstName}} {{lastName}}
          </div>
        </td>
      </tr>
    </table>  
    {{input id="compose_tweet" type="text" maxLength="140" placeholder="Compose new Tweet..." value=newTweetText action="newTweet"}}
  </div>
</div>
